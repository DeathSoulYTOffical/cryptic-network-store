<%
  team = team.sort((a, b) => { return a.pos - b.pos; });
%>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>Team - <%= sitesettings.sitename %></title>
        <meta property="og:title" content="Team - <%= sitesettings.sitename %>" />
        <link rel="icon" href="/assets/logo.png">
        <meta property="og:image" content="/assets/logo.png">
        <meta name="theme-color" content="<%= sitesettings.sitecolor %>">
        <meta name="description" content="<%= sitesettings.sitedesc %>" />
        <meta property="og:type" content="website" />
        <meta property="og:description" content="<%= sitesettings.sitedesc %>" />
    </head>
    <body>
        <%- include('_header') %>
        <div class="container p-4">
            <h1>Team Members</h1>
            <p>Below is where you can find all of the team members that make what we do possible!</p>
            <hr>
        </div>
        <div class="container p-4">
          <div class="row justify-content-center">
            <% team.forEach(function(member) { %>
              <div class="col-lg-3 mb-3 ms-2 me-2 bg-thatdark p-4 bd-theme">
                <img src="/images/team_<%= member.uniqueid %>.png" class="teampagelogo mb-3 bd-theme bg-theme" alt="member picture">
                <h3 style="font-weight: 700;"><%= member.name %></h3>
                <h5 class="text-theme"><%= member.title %></h5>
                <hr>
                <p><%= member.content %></p>
              </div>
            <% }); %>
          </div>
        </div>
        <br>
        <%- include('_footer') %>
    </body>
</html>
