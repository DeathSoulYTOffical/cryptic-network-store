<html lang="en">
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>Admin - <%= sitesettings.sitename %></title>
        <meta property="og:title" content="Admin - <%= sitesettings.sitename %>" />
        <link rel="icon" href="/assets/logo.png">
        <meta property="og:image" content="/assets/logo.png">
        <meta name="theme-color" content="<%= sitesettings.sitecolor %>">
        <meta name="description" content="<%= sitesettings.sitedesc %>" />
        <meta property="og:type" content="website" />
        <meta property="og:description" content="<%= sitesettings.sitedesc %>" />
    </head>
    <body>
        <%- include('_header') %>
        <%- include('_admin_header') %>
        <div class="container">
            <h1><code>Nothing Selected...</code></h1>
            <br>
            <% if(config.ownerIds.includes(user.userid)) { %>
              <div class="text-center p-4 bg-thatdark wowcoolboxlol">
                <h3 style="font-weight: 700;">Overall Income</h3>
                <h4 class="text-theme filterblurextra" style="font-weight: 700;"><%= config.paymentSettings.currencySymbol %><%= Number(sitesettings.totalincome).toLocaleString() %></h4>
              </div>
            <% }; %>
            <div class="row justify-content-center">
                <div class="col-lg-6">
                  <img src="/images/avatar_<%= user.userid %>.png" class="psiconadmin" alt="payment system icon">
                  <h3 style="margin-bottom: 0.4em; font-weight: 700;"><%= user.username %></h3>
                  <h5 style="margin-bottom: 0.7em;"><code><%= user.userid %></code></h5>
                  <p class="psbuttonadmin"><a href="/account/<%= user.userid %>" class="btn btn-theme psbuttonadmina"><i class="fa-solid fa-user"></i> View Account</a></p>
                  <p class="psbuttonadmin"><a href="/logout" class="btn btn-theme psbuttonadmina"><i class="fa-solid fa-circle-left"></i> Logout</a></p>
                </div>
                <div class="col-lg-6">
                  <img src="https://hyperz.net/assets/logo.png" class="psiconadmin" alt="payment system icon">
                  <h3 style="margin-bottom: 0.4em; font-weight: 700;">Payment System</h3>
                  <p class="psbuttonadmin"><a href="https://store.hyperz.net/store/paymentsystem" target="_blank" class="btn btn-outline-theme psbuttonadmina"><i class="fa-solid fa-eye"></i> View Product Page</a></p>
                  <p class="psbuttonadmin"><a href="https://docs.hyperz.net/c/products/paymentsysteminstall" target="_blank" class="btn btn-outline-theme psbuttonadmina"><i class="fa-solid fa-circle-info"></i> View Documentation</a></p>
                  <p class="psbuttonadmin"><a href="https://hyperz.net/discord" target="_blank" class="btn btn-outline-theme psbuttonadmina"><i class="fa-brands fa-discord"></i> Join Our Discord</a></p>
                </div>
              </div>
        </div>
        <%- include('_footer') %>
    </body>
</html>
