  <div class="headerimage">
      <!-- NAVIGATION BAR START -->
      <nav class="<%= headerStyle %>">
          <div class="container-fluid">
            <a class="navbar-brand animate__animated animate__bounceInLeft" href="#"><%= sitesettings.sitename %></a>
